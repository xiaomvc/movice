@import "../movice-star/movice-star-template.wxss";

.detail-top {
    position: relative;
}

.topImg1 {
    width: 100%;
    height: 350rpx;
    -webkit-filter: blur(20px);
}

.topImg2 {
    width: 250rpx;
    height: 250rpx;
    position: absolute;
    bottom: -100rpx;
    right: 20rpx;
}

.top {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 70rpx;
    left: 50rpx;
}

.top text {
    margin-bottom: 40rpx;
}

.topTitle {
    color: #fff;
    font-size: 30rpx;
    font-weight: bolder;
}

.topLike text {
    margin-right: 15rpx;
}

.topLike text:nth-child(1), .topLike text:nth-child(3) {
    color: red;
}

.topLike text:nth-child(2), .topLike text:nth-child(4) {
    /* color: #666; */
    font-weight: bolder;
}

.detailContainer {
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
}

.container-title {
    margin-bottom: 20rpx;
    margin-left: 30rpx;
}

.container-title text {
    font-size: 30rpx;
}

.container-row {
    display: flex;
    flex-direction: row;
    padding: 8rpx;
    text-align: center;
    margin-left: 30rpx;
}

.container-row text:nth-child(1) {
    color: #666;
    margin-right: 20rpx;
}

.introduce {
    display: flex;
    flex-direction: column;
    margin: 30rpx auto 30rpx 30rpx;
}

.introduce text:nth-child(1) {
    font-size: 28rpx;
    color: #666;
}

.introduce text:nth-child(2) {
    font-size: 24rpx;
}

.cast {
    /* overflow: hidden */
	width: 100%;
}

.castTitle {
    margin-left: 30rpx;
    font-size: 26rpx;
}

.castList {
    display: flex;
    flex-direction: row;
    white-space: nowrap;
}

.castimg {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
}

.castList image {
    width: 250rpx;
    height: 200rpx;
    margin: 10rpx;
}
